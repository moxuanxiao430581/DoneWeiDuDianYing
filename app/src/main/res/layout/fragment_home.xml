<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#1E2444"
    tools:context=".fragment.HomeFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_marginTop="30dp"
       android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@mipmap/dingwei"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            >
        </ImageView>

       <TextView
           android:layout_width="wrap_content"
           android:text="北京"
           android:textSize="19sp"
           android:textColor="#F3F0F0"
           android:layout_marginLeft="60dp"
           android:layout_height="wrap_content">
       </TextView>

       <ImageView
           android:id="@+id/homesearch"
           android:layout_width="wrap_content"
           android:background="@mipmap/sousuo"
           android:layout_alignParentRight="true"
           android:layout_marginRight="30dp"
           android:layout_height="wrap_content">

       </ImageView>

   </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        >

        <com.stx.xhb.xbanner.XBanner
            android:id="@+id/xxbanner"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            app:isClipChildrenMode="true"
            app:pointsVisibility="false"
            android:layout_height="200dp">
        </com.stx.xhb.xbanner.XBanner>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/xbcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#F8F2F2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:textSize="18sp"
            >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="#F8F2F2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:textSize="19sp"
            >

        </TextView>

        <TextView
            android:id="@+id/xbpotin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#F8F2F2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:textSize="19sp"
            >

        </TextView>

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#2C315A"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@mipmap/rying"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:text="正在热映"
                android:textSize="18sp"
                android:textColor="#F5F2F2"
                android:layout_marginLeft="70dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:text="更多"
                android:textSize="18sp"
                android:textColor="#F5F2F2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content">
            </TextView>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ryingrecy"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#2C315A"
            android:layout_marginTop="20dp"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@mipmap/jijiang"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:text="即将上映"
                android:textSize="18sp"
                android:textColor="#F5F2F2"
                android:layout_marginLeft="70dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:text="更多"
                android:textSize="18sp"
                android:textColor="#F5F2F2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content">
            </TextView>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/jijiangrecy"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#2C315A"
                android:layout_marginTop="20dp"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:background="@mipmap/rmen"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="热门电影"
                    android:textSize="18sp"
                    android:textColor="#F5F2F2"
                    android:layout_marginLeft="70dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="更多"
                    android:textSize="18sp"
                    android:textColor="#F5F2F2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content">
                </TextView>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rmenrecy"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </LinearLayout>

    </LinearLayout>

    </ScrollView>

</LinearLayout>